function xyz(){
	alert("This is height");
}


function rty(c){
	alert(c);
}


function addFunc(x, y){
			var z = x + y;
			alert("The result is "+z);
}
		
		
function getcube(){  
var number=document.getElementById("number").value;  
alert(number*number*number);  
}

function qwe(){
	if(document.getElementById("chk1").checked){
		alert("True");
	}else{
		alert("False");
	}
	
} 



abc.html
